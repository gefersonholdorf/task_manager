{
	"$schema": "https://www.schemastore.org/tsconfig",
	"display": "Node 23",
	"_version": "23.0.0",

	"compilerOptions": {
		"lib": [
			"es2024",
			"ESNext.Array",
			"ESNext.Collection",
			"ESNext.Iterator",
			"ESNext.Promise"
		],
		"module": "nodenext",
		"target": "es2024",

		"outDir": "./dist",
		"rootDir": "./src",

		"strict": true,
		"skipLibCheck": true,
		"moduleResolution": "node16",

		"resolveJsonModule": true,
		"esModuleInterop": true,
		"isolatedModules": true,

		"paths": {
			"@/*": ["./src/*"]
		}
	},
	"include": ["src"]
}
